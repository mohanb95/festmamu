
<%include ../partials/header %>
<%include ../partials/navbar %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
	<title>Stage Form</title>
	<!--Import Google Icon Font-->
	
	<!--Import materialize.css-->
	<link type="text/css" rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.7/css/materialize.min.css"  media="screen,projection"/>
	<link rel="stylesheet" type="text/css" href="/stylesheets/stage_form.css">
	<!--Let browser know website is optimized for mobile-->
	
	<div class="row">
		<form id='stage_frm' method='POST' action="/stage/new">
			 <input type="submit" value="Submit" style="opacity:0;">
	        <ul class="collapsible popout col s12 offset-m2 m8 " data-collapsible="accordion">
	    		<li>
	      			<div class="collapsible-header active" id="cName_colapse"><i class="material-icons">store</i>Company Name</div>
	      			<div class="collapsible-body">
	      				<div class="input-field ">
				        	<i class="material-icons prefix">store</i>
				          	<input id="icon_prefix" type="text" class="validate" name="Cname" required= true>
				          	<label for="icon_prefix">Company Name</label>
				        </div>
				        <a class="btn waves-effect waves-light" id="cName_col_But" href='#'>next
	    					<i class="material-icons right">done</i>
	  					</a>
	      			</div>
	    		</li>
	    		<li>
	      			<div class="collapsible-header" id="address_colapse"><i class="material-icons">place</i>Address</div>
	      			<div class="collapsible-body">
	      				<div class="input-field ">
				        	<i class="material-icons prefix">my_location</i>
				          	<input id="icon_prefix" type="text" class="validate" name="street1" required= true>
				          	<label for="icon_prefix">Street Address Line 1</label>
				        </div>
				        <div class="input-field ">
				        	<i class="material-icons prefix">my_location</i>
				          	<input id="icon_prefix" type="text" class="validate" name="street2">
				          	<label for="icon_prefix">Street Address Line 2</label>
				        </div>
				        <div class="input-field ">
				        	<i class="material-icons prefix"><i class="fa fa-map-marker" aria-hidden="true" style="margin-left: 6px;"></i></i>
				          	<input id="icon_prefix" type="text" class="validate" name="city" required= true>
				          	<label for="icon_prefix">City</label>
				        </div>
				        <div class="input-field ">
				        	<i class="material-icons prefix"><i class="fa fa-map-marker" aria-hidden="true" style="margin-left: 6px;"></i></i>
				          	<input id="icon_prefix" type="text" class="validate" name="state" required= true>
				          	<label for="icon_prefix">State</label>
				        </div>
				        <div class="input-field ">
				        	<i class="material-icons prefix"><i class="fa fa-map-marker" aria-hidden="true" style="margin-left: 6px;"></i></i>
				          	<input id="icon_prefix" type="text" class="validate" name="zip" required= true>
				          	<label for="icon_prefix">Zip Code</label>
				        </div>
				        <div class="input-field ">
				        	<i class="material-icons prefix">call</i>
				          	<input id="icon_prefix" type="text" class="validate" name="contact1" required= true>
				          	<label for="icon_prefix">Phone Number 1</label>
				        </div>
				        <div class="input-field ">
				        	<i class="material-icons prefix">call</i>
				          	<input id="icon_prefix" type="text" class="validate" name="contact2">
				          	<label for="icon_prefix">Phone Number 2</label>
				        </div>
				        <a class="btn waves-effect waves-light" name="action" id="addr_col_But" href='#'>next
	    					<i class="material-icons right">done</i>
	  					</a>
	      			</div>
	    		</li>
			    <li>
	      			<div class="collapsible-header" id="costing_colapse"><i class="material-icons">whatshot</i>Select Package </div>
	      			<div class="collapsible-body">
	      				<div class="input-field">
		    				<select name='CostPackage' required= true>
		      					<option value="" disabled selected>Choose your package</option>
		      					<option value="1">Gold</option>
		      					<option value="2">Silver</option>
		      					<option value="3">Premium</option>
		    				</select>
		    				<label>Materialize Select</label>
	  					</div>
	  					<div class="input-field ">
				        	<i class="material-icons prefix"><i  aria-hidden="true" style="margin-left: 6px;"></i></i>
				          	<input id="icon_prefix" type="text" class="validate" name="cost" required= true>
				          	<label for="icon_prefix">Cost</label>
				        </div>
						<div class="input-field row">
				        	<i class="material-icons prefix"><i  aria-hidden="true" style="margin-left: 6px;"></i></i>
				          	<label for="icon_prefix1" class="col s6">Dimensions</label>
				          	<input id="icon_prefix1" type="text" class="validate col s6" name="dimensions" required= true placeholder="height X width">
				          	
				        </div>
	  					<div class="input-field">
				        	<i class="material-icons prefix">settings_ethernet</i>
				          	<textarea id="textarea1" class="materialize-textarea" form="stage_frm" name="types"></textarea>
	          				<label for="textarea1">Stage descriptions</label>
				        </div>
	  					<button class="btn waves-effect waves-light"  id="form_submit">Submit
	    					<i class="material-icons right">send</i>
	  					</button>
	      			</div>
	    		</li>
	  		</ul>
	  	</form>
  	</div>



<script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.7/js/materialize.min.js"></script>
